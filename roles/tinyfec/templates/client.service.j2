# {{ ansible_managed }}

[Unit]
Description=tinyFEC Service
After=network.target

[Service]
Type=simple
ExecStart={{ tinyfec_dir }}/tinyfec -c -r{{ peer_host }}:{{ tinyfec_port }} -f{{ fec }} --sub-net {{ tinyfec_subnet }} --tun-dev tinyfec --keep-reconnect --disable-obscure
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
