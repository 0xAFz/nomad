[Unit]
Description=Nomad FEC Service
After=network.target

[Service]
Type=simple
ExecStart={{ config_dir }}/bin/nomad_amd64 -c -r{{ hostvars["external_network"].ansible_host }}:{{ fec_port }} {{ fec }} --sub-net {{ fec_subnet }} --tun-dev nomad-fec --keep-reconnect --disable-obscure
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
