# {{ ansible_managed }}

[Unit]
Description=Nomad EasyTier Service
After=network.target

[Service]
ExecStart={{ config_dir }}/bin/easytier-core -i {{ easytier_server_local_ip }} --hostname nomad-easytier --network-secret {{ easytier_secret }} --default-protocol {{ easytier_protocol }} -l {{ easytier_protocol }}://0.0.0.0:{{ easytier_port }} {% if not easytier_multithread %} --multi-thread {% endif %} {% if not easytier_encryption %} --disable-encryption {% endif %} {% if not easytier_ipv6 %} --disable-ipv6 {% endif %}

Restart=on-failure
RestartSec=5s

[Install]
WantedBy=multi-user.target
