[Unit]
Description=Nomad FEC Service
After=network.target

[Service]
Type=simple
ExecStart={{ config_dir }}/bin/nomad_amd64 -s -l[::]:{{ fec_port }} {{ fec }} --sub-net {{ fec_subnet }} --mode 1 --timeout 1 --tun-dev nomad-fec --disable-obscure
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
