# {{ ansible_managed }}

[Unit]
Description=tinyFEC Service
After=network.target

[Service]
Type=simple
ExecStart={{ tinyfec_dir }}/tinyfec -s -l[::]:{{ tinyfec_port }} -f{{ fec }} --sub-net {{ tinyfec_subnet }} --mode 1 --timeout 1 --tun-dev tinyfec --disable-obscure
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
